	"GLU_LIB = libMesaGLU.so" \
	"TK_LIB = libMesatk.so" \
	"AUX_LIB = libMesaaux.so" \
	"CC = gcc" \
	"CFLAGS = -O2 -ansi -pedantic -fPIC -funroll-loops -mieee-fp -DSHM -DMONDELLO" \
	"MAKELIB = ../mklib.linux" \
	"RANLIB = true" \
	"XLIBS = -L/usr/X11/lib -lX11 -lXext -lclgd547x"

